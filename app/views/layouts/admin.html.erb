<!DOCTYPE html>
<html>
<head>
  <title>Leave Management Portal - Admin </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render partial: 'layouts/header'%>
  <div>
    <div class="col-md-2">
      <%= render partial: 'shared/sidebar'%>
    </div>
    <div class="col-md-10">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key== 'notice' ? 'success' : 'danger' %> "><button class="close" data-dismiss="alert">x</button><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>

