<!DOCTYPE html>
<html>
<head>
  <title>Witmates Technologies - Leave Management Portal </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%favicon_link_tag 'favicon.ico'%>
</head>
<body>
  <%= render partial: 'layouts/header'%>
  <div class="container">
    <% if user_signed_in? %>
    <div class="col-md-2">
      <%= render partial: 'shared/sidebar'%>
    </div>
    <% end %>
    <div class="<%= current_user.blank? ? 'col-md-12' : 'col-md-10' %>">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>" ><button class="close" data-dismiss="alert">x</button><%= value %></div>
      
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>
