<div class="x_title">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="clearfix"></div>
</div>
<div class="x_content">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal form-label-left input_mask' }) do |f| %>
    <div class="col-md-7 col-sm-6 col-xs-12 form-group has-feedback">
      <%= f.input :password, label: false, placeholder: 'Password (leave blank if do not want to change)' %>
      <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
    </div>
    <div class="col-md-7 col-sm-6 col-xs-12 form-group has-feedback">
      <%= f.input :password_confirmation, label: false, placeholder: 'Password confirmation' %>
      <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
    </div>
    <div class="col-md-7 col-sm-6 col-xs-12 form-group has-feedback">
      <%= f.input :current_password, label: false, placeholder: 'Current password(we need your current password to confirm your changes)' %>
      <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
    </div>
    <div class="col-md-7 col-sm-6 col-xs-12 form-group has-feedback text-right">
      <%=f.submit "Update", class: "btn btn-info" %>
    </div>
  <% end %>
</div>

