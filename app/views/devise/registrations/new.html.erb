<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <h2>Sign up</h2>
    <hr>
 
    <%= simple_form_for resource,url:registration_path(resource_name) do |f| %>

       <%= f.input :first_name %>
       <%= f.input :last_name %> 
       <%= f.input :mobile %>
       <%= f.input :email, placeholder: 'user@domain.com' %>
       <%= f.input :password %>
       <%= f.input :password_confirmation %>
     
 
  <%= f.submit 'Sign up' , class: 'btn btn-info' %>    
        <div class="col-md-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>

