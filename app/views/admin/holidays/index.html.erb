<div class="row">
  <h3>Holidays</h3>
  <hr>
  <div class="row">
    <div class="col-md-11">
      <%= link_to "New Holiday", new_admin_holiday_path, method: :get, class: 'pull-right btn btn-info' %>
    </div>
  </div>
   <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Date</th>
        <th>Occasion</th> 
        <th>Action</th>  
      </tr>
    </thead>
    <tbody>
      <% @holidays.each do |holiday|%>
        <tr>
          <td><%= holiday.date.strftime("%d-%m-%Y")  %></td>
          <td><%= holiday.occasion %></td>
          <td><%= link_to edit_admin_holiday_path(holiday) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %> | 
          <%= link_to admin_holiday_path(holiday),data: {:confirm => 'Are you sure?'}, :method => :delete do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %></td>                     
        </tr>
      <% end %>
    </tbody>  
  </table>
</div>  