<div class="x_title">
  <h2>Edit Holiday</h2>
  <div class="clearfix"></div>
</div>
<div style="margin-left: 290px">
  <%= simple_form_for @holiday,url: admin_holiday_path do |f| %>
    <div class="col-md-6">
        <label>Select Occasion Date </label>
        <input type="text" name="holiday[date]"  autocomplete="off" class="form-control string optional holiday_date" value='<%= @holiday.date %>' >
        <label>Description</label>
        <%= f.input :occasion, label: false, as: :text %> 
        <%= f.submit  class: 'btn btn-info' %>
      
    </div>  
  <%end%> 
</div>

 