<div class="x_title">
  <h2>Circulars</h2>
  <div class="clearfix"></div>
</div>
<div class="row">
  <div class="pull-right">
    <%= link_to "New Circular", new_admin_circular_path, method: :get, class: 'btn btn-info' %>
  </div>
</div>
 <table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Note</th>
      <th>Published at</th> 
      <th>Published</th>
      <th>Actions</th>  
    </tr>
  </thead>
  <tbody>
    <% @circulars.each do |circular|%>
      <tr>
        <td><%= truncate(circular.note, length: 100) %></td>
        <td><%= circular.published_at %></td>
        <td><%= circular.published ? 'Active' : 'Inactive' %></td>
        <td>
          <%= link_to "#{circular.published ? 'Inactive' : 'Active'}", update_published_admin_circular_path(circular, published: circular.published ? false : true), method: :patch, class: 'link-underline' %> |
          <%= link_to edit_admin_circular_path(circular), method: :get do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %> |
          <%= link_to admin_circular_path(circular), method: :get do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          <% end %> |  
          <%= link_to admin_circular_path(circular), method: :delete, data: {confirm: "Are you sure?"} do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>            
      </tr>
    <% end %>
  </tbody>  
</table> 